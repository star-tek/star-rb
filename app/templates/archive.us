<h1 class="text-center font-lobster">Archive</h1>

<div class="row">
  <ul>
    <% _(site.posts).chain().reverse().each(function(post){ %>
      <li class="center-block">
        <h4><span class="badge"><%= post.date() %></span>&nbsp;
        <a href="/<%= post.htmlPath() %>"><%= post.title() %></a></h4>
      </li>
    <% }) %>
  </ul>
</div>